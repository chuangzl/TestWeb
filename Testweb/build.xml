<?xml version="1.0"?>
<project name="TestWeb" default="war" basedir=".">
    <property name="classes" value="build/classes" />     
     <property name="build" value="/var/www/html/repo/Testweb" />
    
    <target name="clean">
        <delete dir="build" />
    </target>
 
    <target name="war">
        <war destfile="${build}/TestWeb.war" webxml="WebContent/WEB-INF/web.xml">
            <fileset dir="WebContent" includes="**/*.jsp" />
 
        </war>
    </target>
 
</project>
